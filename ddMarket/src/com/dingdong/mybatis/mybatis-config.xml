<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<properties resource="com/dingdong/mybatis/mybatis-config.properties"></properties>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  
  
  <mappers>
    <mapper resource="com/dingdong/mapping/UserMapper.xml"/>
    <mapper resource="com/dingdong/mapping/AdminMapper.xml"/>
    <mapper resource="com/dingdong/mapping/ClassifyMapper.xml"/>
    <mapper resource="com/dingdong/mapping/CommentMapper.xml"/>
    <mapper resource="com/dingdong/mapping/FavoriteMapper.xml"/>
    <mapper resource="com/dingdong/mapping/ItemMapper.xml"/>
    <mapper resource="com/dingdong/mapping/ItemPicMapper.xml"/>
    <mapper resource="com/dingdong/mapping/OrderDetailMapper.xml"/>
    <mapper resource="com/dingdong/mapping/OrderMapper.xml"/>
    <mapper resource="com/dingdong/mapping/ReceiverMapper.xml"/>
    <mapper resource="com/dingdong/mapping/UserMapper.xml"/>
    
  </mappers>
</configuration>